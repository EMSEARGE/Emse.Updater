<Page x:Class="Emse.Updater.Installer.WPF.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:Emse.Updater.Installer.WPF.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="550"
      Title="Emse Updater">
    <Grid HorizontalAlignment="Left" Width="550">
        <Label x:Name="TextBoxSetupChoice" HorizontalAlignment="Left" Height="48" FontSize="20" Margin="44,77,0,0" Content="Install windows service or desktop application" VerticalAlignment="Top" Width="450"/>
        <RadioButton x:Name="RadioButtonWindowsService" Content="Windows Service" FontSize="20" HorizontalAlignment="Left" Margin="44,172,0,0" VerticalAlignment="Top" Width="208"/>
        <RadioButton x:Name="RadioButtonDesktopApp" Content="Desktop Application" FontSize="20" HorizontalAlignment="Left" Margin="286,172,0,0" VerticalAlignment="Top" Width="208"/>
        <Button x:Name="ButtonConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="44,252,0,0" VerticalAlignment="Top" Width="208" Click="ButtonConfirm_Click"/>
    </Grid>
</Page>
