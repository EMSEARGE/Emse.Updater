<Window x:Class="Emse.Updater.Settings.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emse.Updater.Settings.WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Updater Settings" Height="359.5" Width="525" 
        Icon="./Resources/EmseQ_Settings.png">
    <Grid Margin="0,0,0,-3">
        <Grid HorizontalAlignment="Left" Margin="10,10,0,10" Width="497">
            <Label x:Name="LabelSecondsBetweenLoop" Content="Seconds Between Loop:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="198" Height="26" FontSize="14" FontWeight="Bold"  Margin="6,15,0,0"/>
            <Label x:Name="LabelCurrentVersion" Content="Current Version: " HorizontalAlignment="Left" Margin="268,15,0,0" VerticalAlignment="Top" Width="200" Height="26" FontSize="14" FontWeight="Bold" />
            <Label x:Name="LabelPath" Content="Path:" HorizontalAlignment="Left" Margin="268,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.26,-0.523" Width="200" Height="26" FontSize="14" FontWeight="Bold" />
            <TextBox x:Name="TextBoxSecondsBetweenLoopText"  HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.08,0.459" Width="200" Height="26" FontSize="14" Text="12" />
            <TextBox x:Name="TextBoxCurrentVersionText"  HorizontalAlignment="Left" Margin="268,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.126,1.081" Width="200" Height="26" FontSize="14" Text="123"/>
            <Label x:Name="LabelDomain" Content="Domain:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="200" Height="26" FontSize="14" FontWeight="Bold" />
            <Label x:Name="LabelUrlZip" Content="UrlZip:" HorizontalAlignment="Left" Margin="268,72,0,0" VerticalAlignment="Top" Width="200" Height="26" FontSize="14" FontWeight="Bold" />
            <Label x:Name="LabelFileExtension" Content="FileExtension:" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top" Width="200" Height="25" FontSize="14" FontWeight="Bold" />
            <Label x:Name="LabelTempPath" Content="TempPath:" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" Width="200" Height="28" FontSize="14" FontWeight="Bold" />
            <Label x:Name="LabelExeName" Content="ExeName:" HorizontalAlignment="Left" Margin="268,174,0,0" VerticalAlignment="Top" Width="200" Height="28" FontSize="14" FontWeight="Bold" />
            <TextBox x:Name="TextBoxDomainText" HorizontalAlignment="Left" Height="25" Margin="10,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"  RenderTransformOrigin="0.492,1.445" FontSize="14" />
            <TextBox x:Name="TextBoxUrlZipText" HorizontalAlignment="Left" Height="25" Margin="268,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14" />
            <TextBox x:Name="TextBoxFileExtension" HorizontalAlignment="Left" Height="26" Margin="10,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14"  IsReadOnly="True" Text="123"/>
            <TextBox x:Name="TextBoxPathText" HorizontalAlignment="Left" Height="25" Margin="268,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14" />
            <TextBox x:Name="TextBoxTempPathText" HorizontalAlignment="Left" Height="25" Margin="10,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14" />
            <TextBox x:Name="TextBoxExeNameText" HorizontalAlignment="Left" Height="25" Margin="268,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14" />
            <Button x:Name="ButtonKaydet" Content="SAVE" HorizontalAlignment="Left" Margin="268,243,0,0" VerticalAlignment="Top" Width="200" Click="ButtonKaydet_Click" Height="33" Background="ForestGreen" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
